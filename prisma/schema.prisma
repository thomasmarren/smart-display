// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Album {
  id          String   @id
  title       String
  show        Boolean
  refreshable Boolean  @default(false)
  lastRefresh DateTime @default(now())

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  Photo     Photo[]
}

model EcobeeToken {
  id           Int    @id @default(autoincrement())
  accessToken  String
  refreshToken String
  expiryDate   BigInt

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model GoogleToken {
  id           Int    @id @default(autoincrement())
  accessToken  String
  refreshToken String
  expiryDate   BigInt

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Holiday {
  id      Int    @id @default(autoincrement())
  name    String
  month   String
  day     String
  message String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Photo {
  id             String   @id
  orientation    String
  albumId        String
  creationTime   DateTime
  album          Album    @relation(fields: [albumId], references: [id])
  sortOrder      BigInt   @default(0)
  displayedCount BigInt   @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model SpotifyToken {
  id           Int    @id @default(autoincrement())
  accessToken  String
  refreshToken String
  expiryDate   BigInt

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
